<div class="m-2 p-1 w-auto">
    <div class="p-1 flex justify-center">
        <ul class="flex list-none">
            <li class="mr-1">
                <a href="{{ path('admin_article_list', {'page': 1}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">First</a>
            </li>
            <li class="mr-1">
                <a href="{{ path('admin_article_list', {'page': page - 1}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Previous</a>
            </li>
            {% for i in 1..pages %}
                <li class="mr-1">
                    <a href="{{ path('admin_article_list', {'page': i}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">{{ i }}</a>
                </li>
            {% endfor %}
            <li class="mr-1">
                <a href="{{ path('admin_article_list', {'page': page + 1}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Next</a>
            </li>
            <li class="mr-1">
                <a href="{{ path('admin_article_list', {'page': pages}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Last</a>
            </li>
        </ul>
    </div>
    <div class="p-1 flex justify-center">
        <p>Page {{ page }} of {{ pages }}</p>
    </div>
</div>
