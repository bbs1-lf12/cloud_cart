{% extends 'base.html.twig' %}

{% set isEmpty = articles|length < 1 %}

{% block body %}
    <h1>Articles</h1>
    <ul>
        {% for article in articles %}
            <li>
                {{ article.title }}
            </li>
        {% endfor %}
    </ul>
    {% if not isEmpty %}
        {% include 'common/paginator/_paginator.html.twig' with {
            pager: pager,
            route: 'article_list'
        } %}
    {% endif %}
{% endblock %}
