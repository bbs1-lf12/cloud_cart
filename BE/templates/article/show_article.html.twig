{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="m-5 text-4xl text-center">{{ article.title }}</h1>
    <div class="flex flex-row justify-center">
        <div class="flex flex-row w-2/3 border-2 rounded bg-componentBackground-light">
            <div class="px-2 py-1 w-2/3 flex flex-col justify-between">
                <div>
                    <p>{{ article.description }}</p>
                    <p class="text-right mt-3">Price: {{ article.priceInCents|price }}</p>
                </div>
                <button class="button button-accent w-full">Add to Cart</button>
            </div>
            <img src="/images/{{ article.image }}" class="w-1/3">
        </div>
    </div>
{% endblock %}

