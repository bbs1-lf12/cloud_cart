{% extends 'admin/admin_base.html.twig' %}

{% set isEmpty = users|length < 1 %}

{% block body %}
    <h1 class="m-5 text-4xl text-center">List Users</h1>
    <div class="table-container">
        <div class="flex flex-row">
            {% include 'admin/user/partials/_userFilter.html.twig' %}
        </div>
        <table class="w-full">
            <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Activated</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles|join(' ') }}</td>
                    <td>{{ user.isVerified }}</td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% if isEmpty %}
            <h2 class="m-5 text-2xl text-center">No users found...</h2>
        {% endif %}
    </div>

    {% if not isEmpty %}
        {% include 'common/paginator/_paginator.html.twig' with {
            page: page,
            pages: totalPages,
            route: 'admin_user_list',
        } %}
    {% endif %}
{% endblock %}
