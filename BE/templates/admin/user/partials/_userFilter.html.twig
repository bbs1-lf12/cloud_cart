{{ form_start(filterForm) }}
<div class="filter">
    <div class="filter-group">
        {{ form_label(filterForm.search) }}
        {{ form_widget(filterForm.search) }}
    </div>
    <div class="filter-group">
        {{ form_label(filterForm.roles) }}
        {{ form_widget(filterForm.roles) }}
    </div>
    <div class="filter-group">
        {{ form_label(filterForm.isActive) }}
